<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <vip.kuaifan.weiui.ui.component.grid.view.GridPager
        android:id="@+id/v_gridPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:indicatorMargin="8dp"
        app:indicatorPosition="centerBottom"
        app:indicatorShape="oval"
        app:indicatorSpace="3dp"
        app:selectedIndicatorColor="@color/weiui_navbar"
        app:selectedIndicatorHeight="6dp"
        app:selectedIndicatorWidth="6dp"
        app:unSelectedIndicatorColor="#E0E0E0"
        app:unSelectedIndicatorHeight="6dp"
        app:unSelectedIndicatorWidth="6dp"  />

</RelativeLayout>
