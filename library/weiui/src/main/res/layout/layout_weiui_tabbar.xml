<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <vip.kuaifan.weiui.extend.view.tablayout.CommonTabLayout
            android:id="@+id/navigation_top"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/weiui_navbar"
            android:visibility="gone"
            tl:tl_iconVisible="false"
            tl:tl_indicator_corner_radius="1.5dp"
            tl:tl_indicator_height="3dp"
            tl:tl_indicator_width="12dp"
            tl:tl_textsize="14sp" />

        <View
            android:id="@+id/navigation_tline"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#EAEAEA"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <vip.kuaifan.weiui.extend.view.NoAnimationViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/navigation_bline"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#EAEAEA"/>

        <vip.kuaifan.weiui.extend.view.tablayout.CommonTabLayout
            android:id="@+id/navigation_bottom"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/weiui_white"
            android:visibility="gone"
            tl:tl_iconHeight="23dp"
            tl:tl_iconWidth="23dp"
            tl:tl_indicator_color="#2C97DE"
            tl:tl_indicator_height="0dp"
            tl:tl_textSelectColor="#2C97DE"
            tl:tl_textUnselectColor="#66000000"
            tl:tl_textsize="12sp" />

    </LinearLayout>

</LinearLayout>
