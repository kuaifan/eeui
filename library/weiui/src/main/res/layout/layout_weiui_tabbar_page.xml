<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- weex -->
    <View
        android:id="@+id/v_statusBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/v_swipeRefresh"
        android:layout_below="@+id/v_statusBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/v_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <FrameLayout
        android:id="@+id/v_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/weiui_background"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:scaleType="fitStart"
            android:src="@drawable/load_page"
            tools:ignore="ContentDescription" />

        <ProgressBar
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center" />

    </FrameLayout>

    <!-- 错误提示 -->
    <include layout="@layout/activity_page_error"/>

</RelativeLayout>



