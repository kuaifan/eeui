<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <vip.kuaifan.weiui.ui.component.banner.view.BannerLayout
        android:id="@+id/v_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoPlayDuration="6000"
        app:scrollDuration="900"
        app:indicatorMargin="8dp"
        app:indicatorPosition="centerBottom"
        app:indicatorShape="oval"
        app:indicatorSpace="3dp"
        app:selectedIndicatorColor="@color/weiui_navbar"
        app:selectedIndicatorHeight="6dp"
        app:selectedIndicatorWidth="6dp"
        app:unSelectedIndicatorColor="#99ffffff"
        app:unSelectedIndicatorHeight="6dp"
        app:unSelectedIndicatorWidth="6dp" />

</RelativeLayout>